{
  "name": "ecommerce-pwa",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node src/server/index.js",
    "build": "yarn i18n && next build",
    "start": "next start",
    "lint": "next lint",
    "extract:i18n": "formatjs extract 'src/**/*.ts*' --out-file temp.json --flatten --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "compile:i18n": "formatjs compile 'temp.json' --out-file lang/pt-BR.json && rm temp.json",
    "i18n": "yarn extract:i18n && yarn compile:i18n"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.0.0",
    "@instana/collector": "^2.18.1",
    "@reduxjs/toolkit": "^1.9.3",
    "@sentry/nextjs": "^7.43.0",
    "@types/node": "18.15.0",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "eslint": "8.36.0",
    "eslint-config-next": "13.2.4",
    "express": "^4.18.2",
    "express-prom-bundle": "^6.6.0",
    "next": "13.2.4",
    "next-redux-wrapper": "^8.1.0",
    "pino": "^8.11.0",
    "pino-pretty": "^10.0.0",
    "prom-client": "^14.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.43.7",
    "react-icons": "^4.8.0",
    "react-intl": "^6.2.10",
    "react-redux": "^8.0.5",
    "react-responsive-carousel": "^3.2.23",
    "react-toastify": "^9.1.2",
    "styled-components": "^5.3.9",
    "typescript": "4.9.5",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@formatjs/cli": "^6.0.4",
    "@types/express": "^4.17.17",
    "@types/redux-persist": "^4.3.1",
    "@types/styled-components": "^5.1.26",
    "autoprefixer": "^10.4.14",
    "babel-plugin-formatjs": "^10.4.0",
    "eslint-config-prettier": "^8.7.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "tailwind-styled-components": "^2.2.0",
    "tailwindcss": "^3.2.7"
